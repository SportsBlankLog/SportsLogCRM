@inherits BlazorBusyComponentBaseModel

@if (IsBusyProgress)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="col-auto">
        <select @bind="SelectedDirectoryField" class="form-select" id="inputGroupSelect01">
            <option value="0" selected disabled="@(SelectedDirectoryField > 0)">Selecting a directory...</option>
            @foreach (EntryModel e in Entries)
            {
                <option value="@e.Id">
                    @e.Name
                </option>
            }
        </select>
    </div>
    <div class="col-auto" title="Multi-select">
        <div class="form-check form-check-inline">
            <input @bind="IsMultiCheckBox" class="form-check-input" type="checkbox" id="inlineCheckboxDirectoryFieldFormUI" value="option1">
            <label class="form-check-label" for="inlineCheckboxDirectoryFieldFormUI">multi</label>
        </div>
    </div>
}