<div class="hstack">
    <select dom-guid="{C087B0B4-3A5D-42F1-ABDD-DDA2EBB8CE06}" @bind="SelectedGeneratorField" class="form-select">
        @foreach (EntryAltDescriptionModel e in Entries)
        {
            <option value="@e.Id">
                <MudTooltip Text="@e.Description">
                    @e.Name
                </MudTooltip>
            </option>
        }
    </select>
    <div class="ms-1">
        <MudTooltip Text="Словарь опций генерации списка">
            <input style="width: max-content;" @bind-value="OptionsGeneration" @bind-value:event="oninput" placeholder='{"Поле1":"xxx", "Поле2":"yyy", ...}' type="text" id="inputName" class="form-control">
        </MudTooltip>
    </div>
</div>