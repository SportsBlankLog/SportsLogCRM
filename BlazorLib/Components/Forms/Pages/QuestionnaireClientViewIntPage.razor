@page "/questionnaire/session/2/{QuestionnaireId:int}"

@inherits BlazorBusyComponentBaseModel

<span>Опрос/анкета</span>

@if (IsBusyProgress)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
    </div>
}
else
{
    <CascadingValue Value="SessionQuestionnaire">
        <CascadingValue Value="true">
            <QuestionnaireClientViewComponent />
        </CascadingValue>
    </CascadingValue>
}