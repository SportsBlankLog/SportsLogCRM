<div class="alert alert-light" role="alert">
    @StatusMessage
</div>

<h3>Recovery codes</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Please put these codes in a safe place.</strong>
    </p>
    <p>
        If you lose your device and don't have your recovery codes, you'll lose access to your account.
    </p>
</div>
<div class="row">
    <div class="col-md-12">
        @foreach (string recoveryCode in RecoveryCodes)
        {
            <div>
                <code class="recovery-code">@recoveryCode</code>
            </div>
        }
    </div>
</div>