<!-- Display the tab headers -->
<CascadingValue Value="this">
    <ul class="nav nav-@(AsPills ? "pills" : "tabs") @(NavFill ? " nav-fill" : "") mb-2">
        @ChildContent
    </ul>
</CascadingValue>

<!-- Display body for only the active tab -->
<div class="nav-tabs-body p-1">
    @ActiveTab?.ChildContent
</div>