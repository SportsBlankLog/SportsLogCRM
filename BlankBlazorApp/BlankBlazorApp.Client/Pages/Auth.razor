@page "/auth"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Авторизация</PageTitle>

<h1>Вы прошли аутентификацию</h1>

<AuthorizeView>
    Привет @context.User.Identity?.Name!
    <ul>

        @foreach (var c in context.User.Claims)
        {
            <li>[@c.Type] @c.Value</li>
        }
    </ul>
</AuthorizeView>
