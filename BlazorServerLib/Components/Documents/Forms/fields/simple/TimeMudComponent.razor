@inherits FieldBaseComponentModel

<MudTextField @bind-Value="TimeOnlyValue" HelperText="@Hint" Label="@Label" Required="@Required" InputType="InputType.Time" InputId="@Id" />

@code {
    [Parameter]
    public TimeOnly? Value { get; set; }
    TimeOnly? _value;

    [Parameter]
    public EventCallback<TimeOnly?> ValueChanged { get; set; }


    public override bool IsEdited => Value != _value;

    TimeOnly? TimeOnlyValue
    {
        get => Value;
        set
        {
            Value = value;
            ValueChanged.InvokeAsync(Value);
        }
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _value = Value;
    }
}