@inherits FieldBaseComponentModel

<MudTextField @bind-Value="DateTimeValue" HelperText="@Hint" Format="s" Label="@Label" Required="@Required" InputType="InputType.DateTimeLocal" />

@code {
    [Parameter]
    public DateTime? Value { get; set; }

    [Parameter]
    public EventCallback<DateTime?> ValueChanged { get; set; }

    public DateTime? DateTimeValue
    {
        get => Value;
        set
        {
            Value = value;
            ValueChanged.InvokeAsync(Value);
        }
    }
}