@inherits FieldBaseComponentModel

<MudTextField @bind-Value="DateTimeValue" HelperText="@Hint" Format="s" Label="@Label" Required="@Required" InputType="InputType.DateTimeLocal" InputId="@Id" />

@code {
    [Parameter]
    public DateTime? Value { get; set; }
    DateTime? _value;

    [Parameter]
    public EventCallback<DateTime?> ValueChanged { get; set; }

    
    public override bool IsEdited => Value != _value;

    DateTime? DateTimeValue
    {
        get => Value;
        set
        {
            Value = value;
            ValueChanged.InvokeAsync(Value);
        }
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _value = Value;
    }
}