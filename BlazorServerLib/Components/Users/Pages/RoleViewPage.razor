@page "/Users/Roles/view-{RoleId:guid}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@attribute [Authorize(Roles = GlobalStaticConstants.Roles.Admin)]

@inject IUsersProfilesService UsersProfilesRepo

<PageTitle>Роль</PageTitle>

<h3>Роль</h3>

<div class="row">
    <div class="col">
        <UsersTableComponent OwnerRoleId="@RoleId.ToString()" />
    </div>
    <div class="col">
        <ClaimsManageComponent ClaimArea="ClaimAreasEnum.ForRole" OwnerId="@RoleId.ToString()" />
    </div>
</div>

@code {
    [Parameter]
    public Guid RoleId { get; set; }
}