@using BlazorLib.Components.Shared.Constructor

@page "/questionnaire/session/protected/{DocumentId:int}"

@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits BlazorBusyComponentBaseAuthModel

@attribute [Authorize]

<span>Опрос/анкета</span>

@if (IsBusyProgress)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
    </div>
}
else
{
    <CascadingValue Value="SessionDocument">
        <CascadingValue Value="true">
            <DocumentClientViewComponent />
        </CascadingValue>
    </CascadingValue>
}