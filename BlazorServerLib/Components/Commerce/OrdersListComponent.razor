@using BlazorWebLib.Components.Commerce.OrderDocumentObject
@inherits BlazorBusyComponentBaseModel

<style>
    .q-volume i {
        cursor: pointer;
    }
</style>

@if (Orders.Length == 1)
{
    <OrderDocumentObjectComponent Document="Orders.First()" />
}
else
{
    <TabSetComponent IsSilent="true">
        @foreach (OrderDocumentModelDB doc in Orders)
        {
            <TabComponent Tooltip="@($"#{doc.Organization!.Id}: {doc.Organization!.Name}")" Title="@doc.Organization!.Name" SystemName="@doc.Organization!.Id.ToString()">
                <OrderDocumentObjectComponent Document="doc" />
            </TabComponent>
        }
    </TabSetComponent>
}