@foreach (TabAddressForOrderModelDb at in Document.AddressesTabs!)
{
    <div class="card mt-3">
        <div class="card-header">
            @(at.AddressOrganization!.Name)
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">Наименование</th>
                        <th scope="col">Цена</th>
                        <th scope="col">Количество</th>
                        <th scope="col">Сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RowOfOrderDocumentModelDB row in at.Rows!)
                    {
                        <tr>
                            <th scope="row">@row.Offer!.GetName</th>
                            <td>@row.Offer.Price</td>
                            <td>
                                <div class="hstack q-volume">
                                    <div class="p-2">@row.Quantity @row.Offer.OfferUnit.DescriptionInfo().ToLower()</div>
                                    @if (Issue.StepIssue == HelpdeskIssueStepsEnum.Created)
                                    {
                                        <i class="bi bi-caret-up-fill me-1"></i>
                                        <i class="bi bi-caret-down-fill"></i>
                                    }
                                </div>
                            </td>
                            <td>@(row.Quantity * row.Offer.Price)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public required OrderDocumentModelDB Document { get; set; }

    [CascadingParameter, EditorRequired]
    public required IssueHelpdeskModelDB Issue { get; set; }
}