@page "/goods/card/{GoodsId:int}"
@using MudBlazor

@rendermode @(new InteractiveServerRenderMode(prerender: false))
@attribute [Authorize(Roles = $"{GlobalStaticConstants.Roles.Admin},{GlobalStaticConstants.Roles.CommerceManager}")]

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Параметры">
        <GoodsEditComponent GoodsId="GoodsId" />
    </MudTabPanel>
    <MudTabPanel Text="Заказы">
        <OrdersJournalComponent GoodsFilter="GoodsId" />
    </MudTabPanel>
</MudTabs>

@code {
    [Parameter]
    public int GoodsId { get; set; }
}