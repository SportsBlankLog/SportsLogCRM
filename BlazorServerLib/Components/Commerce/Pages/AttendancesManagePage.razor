@page "/attendances"

@using BlazorWebLib.Components.Helpdesk
@using BlazorWebLib.Components.Warehouse
@using MudBlazor

@rendermode @(new InteractiveServerRenderMode(prerender: false))
@attribute [Authorize(Roles = $"{GlobalStaticConstants.Roles.Admin},{GlobalStaticConstants.Roles.Debug}")]

<PageTitle>Услуги</PageTitle>

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Справочник">
        <AttendancesManageComponent />
    </MudTabPanel>
    <AuthorizeView Roles="@($"{GlobalStaticConstants.Roles.Admin},{GlobalStaticConstants.Roles.CommerceManager},{GlobalStaticConstants.Roles.Debug}")">
        <Authorized>
            <MudTabPanel Text="График работы">
                <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Color="@Color.Primary">
                    <MudTabPanel Text="Понедельник">
                        <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Monday" />
                    </MudTabPanel>
                    <MudTabPanel Text="Вторник">
                        <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Tuesday" />
                    </MudTabPanel>
                    <MudTabPanel Text="Среда">
                        <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Wednesday" />
                    </MudTabPanel>
                    <MudTabPanel Text="Четверг">
                        <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Thursday" />
                    </MudTabPanel>
                    <MudTabPanel Text="Пятница">
                        <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Friday" />
                    </MudTabPanel>
                    <MudTabPanel Text="Суббота">
                        <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Saturday" />
                    </MudTabPanel>
                    <MudTabPanel Text="Воскресенье">
                        <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Sunday" />
                    </MudTabPanel>
                </MudTabs>
            </MudTabPanel>
        </Authorized>
    </AuthorizeView>
</MudTabs>