@page "/attendances"
@using BlazorWebLib.Components.Helpdesk
@using BlazorWebLib.Components.Warehouse
@using MudBlazor

@rendermode @(new InteractiveServerRenderMode(prerender: false))
@attribute [Authorize]
<PageTitle>Аренда/Бронирование</PageTitle>

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Справочник">
        <AttendancesManageComponent />
    </MudTabPanel>
    <AuthorizeView Roles="@($"{GlobalStaticConstants.Roles.Admin},{GlobalStaticConstants.Roles.CommerceManager},{GlobalStaticConstants.Roles.Debug}")">
        <Authorized>
            <MudTabPanel Text="Каталог">
                <MudPaper Class="ma-2" Elevation="3">
                    <RubricsManageComponent ContextName="@GlobalStaticConstants.Routes.ATTENDANCES_CONTROLLER_NAME" />
                </MudPaper>
            </MudTabPanel>
            <MudTabPanel Text="Стратегия">
                <span>~</span>
            </MudTabPanel>
        </Authorized>
    </AuthorizeView>
</MudTabs>