@using MudBlazor

@inherits BlazorBusyComponentBaseAuthModel

<style>
    .btn-link {
        cursor: pointer;
    }
</style>

<MudTable ServerData="ServerReload" Dense="true" Hover="true" @ref="table">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Организации</MudText>
        <MudSpacer />
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="Name" T="OrganizationModelDB">Name</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="INN" T="OrganizationModelDB">INN</MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">
            @context.Name
            <sup class="btn-link link-underline-secondary link-secondary" @onclick="async () => await SetContract(context)">@GetContractBtn(context)</sup>
        </MudTd>
        <MudTd DataLabel="INN">
            @context.INN
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>Данные отсутствуют</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Загрузка...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>