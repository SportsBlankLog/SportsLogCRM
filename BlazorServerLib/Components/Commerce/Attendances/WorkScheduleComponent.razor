            <MudTabPanel Text="@GlobalStaticConstants.RU.DateTimeFormat.GetDayName(DayOfWeek.Wednesday)">
                <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Wednesday" />
            </MudTabPanel>
            <MudTabPanel Text="@GlobalStaticConstants.RU.DateTimeFormat.GetDayName(DayOfWeek.Thursday)">
                <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Thursday" />
            </MudTabPanel>
            <MudTabPanel Text="@GlobalStaticConstants.RU.DateTimeFormat.GetDayName(DayOfWeek.Friday)">
                <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Friday" />
            </MudTabPanel>
            <MudTabPanel Text="@GlobalStaticConstants.RU.DateTimeFormat.GetDayName(DayOfWeek.Saturday)">
                <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Saturday" />
            </MudTabPanel>
            <MudTabPanel Text="@GlobalStaticConstants.RU.DateTimeFormat.GetDayName(DayOfWeek.Sunday)">
                <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Sunday" />
            </MudTabPanel>
        </MudTabs>
    </div>
</div>