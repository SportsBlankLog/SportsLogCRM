@using MudBlazor

@inherits BlazorBusyComponentBaseModel

<div class="card">
    <div class="card-body">
        <MudTabs AlwaysShowScrollButtons="true" Elevation="4" Rounded="true" Color="@Color.Primary">
            <MudTabPanel Text="@GlobalStaticConstants.RU.DateTimeFormat.GetDayName(DayOfWeek.Monday)">
                <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Monday" />
            </MudTabPanel>
            <MudTabPanel Text="@GlobalStaticConstants.RU.DateTimeFormat.GetDayName(DayOfWeek.Tuesday)">
                <WorkScheduleWeekdayComponent Weekday="DayOfWeek.Tuesday" />
