@using MudBlazor

@inherits BlazorBusyComponentBaseModel

<li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2">
        <div class="hstack gap-3">
            <MudTextField T="TimeSpan" Label="Начало" InputType="InputType.Time" @bind-Value="WorkScheduleEdit.StartPart" Immediate="true" />
            <MudTextField T="TimeSpan" Label="Конец" InputType="InputType.Time" @bind-Value="WorkScheduleEdit.EndPart" Immediate="true" />
            <MudTextField @bind-Value="WorkScheduleEdit.Name" Label="Примечание" Variant="Variant.Text" Immediate="true" />
            <MudNumericField title="0 - безлимитное" T="uint" @bind-Value="WorkScheduleEdit.QueueCapacity" Label="Вместимость" Variant="Variant.Text" Min="0" Immediate="true" />
            <MudSwitch @bind-Value="WorkScheduleEdit.IsDisabled" ThumbIcon="@(WorkScheduleEdit.IsDisabled ? Icons.Material.Filled.Close : Icons.Material.Filled.Done)" ThumbIconColor="@(WorkScheduleEdit.IsDisabled ? Color.Error : Color.Success)">@(WorkScheduleEdit.IsDisabled ? "Отключено" : "Включено")</MudSwitch>
        </div>
    </div>
    <MudSpacer />
    <MudFab Disabled="!IsEdited" Color="IsEdited ? Color.Success : Color.Surface" StartIcon="@Icons.Material.Filled.Save" OnClick="SaveSchedule" />
    @if (IsEdited)
    {
        <MudFab Color="Color.Surface" EndIcon="@Icons.Material.Filled.Cancel" Class="mx-1" OnClick="() => WorkScheduleEdit = GlobalTools.CreateDeepCopy(WorkSchedule)!" />
    }
    @* <span class="badge text-bg-danger rounded-pill">0</span> *@
</li>