@using MudBlazor

@inherits BlazorBusyComponentBaseAuthModel

<div style="display: grid; grid-template-columns: 1fr auto; align-items: center; width: 100%" class="@(!string.IsNullOrWhiteSpace(ItemModel?.STATUS) ? "text-decoration-line-through opacity-25": "")">
    <MudStack Row="true">
        <div class="row">
            <div class="col-auto">
                <input @bind-value="itemSystemName" @bind-value:event="oninput" class="form-control form-control-sm@(string.IsNullOrWhiteSpace(itemSystemName) ? " border border-warning-subtle" : "")" autocomplete="off" placeholder="Имя">
            </div>
            <div class="col-auto">
                <button disabled="@(!IsEditedName)" type="button" class="btn btn-outline-info btn-sm">Сохранить</button>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-outline-info btn-sm">Отмена</button>
            </div>
        </div>
        @* else
        {
            <span class="font-monospace">@Item.Text</span>
        } *@
    </MudStack>
    <div style="justify-self: end;">
        <div class="row">
            @if (!string.IsNullOrWhiteSpace(ItemModel?.STATUS))
            {
                <div class="col-auto">
                    <p class="lead">
                        Деактивирован.
                    </p>
                </div>
            }
            <div class="col-auto">
                <div class="hstack">
                    @if (!ReadOnly)
                    {
                        <MudIconButton Icon="@Icons.Material.Filled.ArrowDropUp"></MudIconButton>
                        <MudIconButton Icon="@Icons.Material.Filled.ArrowDropDown"></MudIconButton>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button title="Переименовать элемент" type="button" class="btn btn-outline-info btn-sm bi bi bi-pencil"></button>
                            <button disabled="@IsEditedName" type="button" class="btn btn-outline-@(!string.IsNullOrWhiteSpace(ItemModel?.STATUS) ? "secondary" : "info") btn-sm bi bi-toggle-@(!string.IsNullOrWhiteSpace(ItemModel?.STATUS) ? "off" : "on")"></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>