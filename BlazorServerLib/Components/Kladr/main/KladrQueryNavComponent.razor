@using MudBlazor
@using Newtonsoft.Json.Linq
@inherits BlazorBusyComponentBaseModel

<MudTable ServerData="ServerReload" Dense="true" Hover="true" @ref="table" Loading="IsBusyProgress">
    <ToolBarContent>
        @if (string.IsNullOrWhiteSpace(CodeLikeFilter))
        {
            <MudText Typo="Typo.h6">Классификатор адресов</MudText>
            <MudSpacer />            
        }
    </ToolBarContent>
    <HeaderContent>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            @switch (context.TypeObject)
            {
                case KladrTypesObjectsEnum.RootRegion or KladrTypesObjectsEnum.Area or KladrTypesObjectsEnum.City or KladrTypesObjectsEnum.PopPoint:
                    ObjectKLADRModelDB obj = context.Payload.ToObject<ObjectKLADRModelDB>() ?? throw new Exception("context.Payload.ToObject<ObjectKLADRModelDB>() - IS NULL");
                    <KladrRowObjectComponent @key="@($"{CodeLikeFilter}_{obj.CODE}")" ObjectKLADR="obj" />
                    break;
                case KladrTypesObjectsEnum.Street:
                    StreetKLADRModelDB street = context.Payload.ToObject<StreetKLADRModelDB>() ?? throw new Exception("context.Payload.ToObject<StreetKLADRModelDB>() - IS NULL");
                    <KladrRowStreetComponent @key="@($"{CodeLikeFilter}_{street.CODE}")" ObjectKLADR="street" />
                    break;
                case KladrTypesObjectsEnum.Home:
                    HouseKLADRModelDB home = context.Payload.ToObject<HouseKLADRModelDB>() ?? throw new Exception("context.Payload.ToObject<HouseKLADRModelDB>() - IS NULL");
                    <KladrRowHomeComponent @key="@($"{CodeLikeFilter}_{home.CODE}")" ObjectKLADR="home" />
                    break;
            }
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>Ни чего не найдено</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Загрузка...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>