@using MudBlazor
@inherits BlazorBusyComponentBaseModel

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <span class="navbar-brand">@GetTitle()</span>
        <button @onclick="() => NavbarToggle =! NavbarToggle" class="navbar-toggler@(NavbarToggle ? "" : " collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse@(NavbarToggle ? "" : " show")" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <span class="nav-link active" aria-current="page">Чат</span>
                </li>
                <li class="nav-item">
                    <span class="nav-link">Вложения</span>
                </li>
            </ul>
            <span class="navbar-text">
                @Chat.Type.DescriptionInfo()
            </span>
        </div>
    </div>
</nav>

<div class="my-3">
    <label for="exampleFormControlTextarea1" class="form-label">Отправка сообщения</label>
    <div class="input-group">
        <textarea class="form-control" aria-label="With textarea" id="exampleFormControlTextarea1"></textarea>
        <button class="btn btn-outline-secondary bi bi-send" type="button" id="button-addon2"></button>
    </div>
</div>

<MessagesTelegramComponent ChatId="Chat.Id" />